generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  STUDENT
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum Tier {
  MID1
  MID2
  FINAL
  FULL
}

enum LockScope {
  GLOBAL
  PER_STUDENT
}

enum LockLevel {
  TIER
  CHAPTER
  LESSON
}

enum NotificationType {
  RECORDING_AVAILABLE
  GENERAL
  ANNOUNCEMENT
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String
  avatarUrl    String?  @map("avatar_url")
  role         Role     @default(STUDENT)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  enrollments    Enrollment[]
  lessonProgress LessonProgress[]
  notes          Note[]
  testimonials   Testimonial[]
  attendance     Attendance[]
  dailyActivity  DailyActivity[]
  achievements   Achievement[]

  @@map("users")
}

model Course {
  id               String      @id @default(uuid())
  slug             String      @unique
  title            String
  description      String?
  shortDescription String?     @map("short_description")
  imageUrl         String?     @map("image_url")
  previewVideoUrl  String?     @map("preview_video_url")
  price            Decimal     @default(0) @db.Decimal(10, 2)
  isFree           Boolean     @default(false) @map("is_free")
  category         String?
  level            CourseLevel @default(BEGINNER)
  durationHours    Int?        @map("duration_hours")
  studentsCount    Int         @default(0) @map("students_count")
  rating           Decimal     @default(0) @db.Decimal(3, 2)
  isPublished      Boolean     @default(false) @map("is_published")
  createdAt        DateTime    @default(now()) @map("created_at")
  updatedAt        DateTime    @updatedAt @map("updated_at")

  chapters     Chapter[]
  lessons      Lesson[]
  enrollments  Enrollment[]
  testimonials Testimonial[]

  @@map("courses")
}

model Chapter {
  id         String   @id @default(uuid())
  courseId    String   @map("course_id")
  title      String
  tier       Tier     @default(MID1)
  orderIndex Int      @map("order_index")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  course  Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons Lesson[]

  @@map("chapters")
}

model Lesson {
  id              String   @id @default(uuid())
  courseId         String   @map("course_id")
  chapterId        String?  @map("chapter_id")
  title           String
  description     String?
  videoUrl        String?  @map("video_url")
  durationMinutes Int?     @map("duration_minutes")
  orderIndex      Int      @map("order_index")
  isPreview       Boolean  @default(false) @map("is_preview")
  resourcesUrl    String?  @map("resources_url")
  tier            Tier     @default(FULL)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  course   Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  chapter  Chapter?         @relation(fields: [chapterId], references: [id], onDelete: SetNull)
  progress LessonProgress[]
  notes    Note[]

  @@map("lessons")
}

model ContentLock {
  id        String    @id @default(uuid())
  scope     LockScope
  level     LockLevel
  targetId  String    @map("target_id")
  studentId String?   @map("student_id")
  locked    Boolean   @default(true)
  createdBy String    @map("created_by")
  createdAt DateTime  @default(now()) @map("created_at")

  @@map("content_locks")
}

model LockAudit {
  id        String    @id @default(uuid())
  adminId   String    @map("admin_id")
  studentId String?   @map("student_id")
  level     LockLevel
  scope     LockScope
  targetId  String    @map("target_id")
  action    String
  createdAt DateTime  @default(now()) @map("created_at")

  @@map("lock_audit")
}

model Enrollment {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  courseId     String    @map("course_id")
  tier        Tier      @default(FULL)
  expiresAt   DateTime? @map("expires_at")
  enrolledAt  DateTime  @default(now()) @map("enrolled_at")
  completedAt DateTime? @map("completed_at")
  progress    Decimal   @default(0) @db.Decimal(5, 2)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("enrollments")
}

model LessonProgress {
  id                  String    @id @default(uuid())
  userId              String    @map("user_id")
  lessonId            String    @map("lesson_id")
  isCompleted         Boolean   @default(false) @map("is_completed")
  completedAt         DateTime? @map("completed_at")
  lastWatchedPosition Int       @default(0) @map("last_watched_position")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@map("lesson_progress")
}

model Attendance {
  id              String    @id @default(uuid())
  userId          String    @map("user_id")
  meetingId       String    @map("meeting_id")
  joinTime        DateTime  @map("join_time")
  leaveTime       DateTime? @map("leave_time")
  durationSeconds Int?      @map("duration_seconds")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("attendance")
}

model DailyActivity {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  date           DateTime @default(now()) @db.Date
  minutesWatched Int      @default(0) @map("minutes_watched")
  liveAttended   Boolean  @default(false) @map("live_attended")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("daily_activity")
}

model Achievement {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  type       String
  unlockedAt DateTime @default(now()) @map("unlocked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("achievements")
}

model Payment {
  id              String    @id @default(uuid())
  userId          String    @map("user_id")
  amount          Decimal   @db.Decimal(10, 2)
  tier            Tier
  receiptImageUrl String    @map("receipt_image_url")
  isReviewed      Boolean   @default(false) @map("is_reviewed")
  reviewedBy      String?   @map("reviewed_by")
  reviewedAt      DateTime? @map("reviewed_at")
  createdAt       DateTime  @default(now()) @map("created_at")

  @@map("payments")
}

model Note {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  lessonId         String   @map("lesson_id")
  content          String
  timestampSeconds Int?     @map("timestamp_seconds")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("notes")
}

model Testimonial {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  courseId    String   @map("course_id")
  content    String
  rating     Int
  isFeatured Boolean  @default(false) @map("is_featured")
  createdAt  DateTime @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("testimonials")
}

model LiveSession {
  id            String    @id @default(uuid())
  title         String?
  tier          Tier
  zoomMeetingId String?   @map("zoom_meeting_id")
  zoomJoinUrl   String?   @map("zoom_join_url")
  zoomStartUrl  String?   @map("zoom_start_url")
  isLive        Boolean   @default(false) @map("is_live")
  scheduledAt   DateTime? @map("scheduled_at")
  startedAt     DateTime? @map("started_at")
  endedAt       DateTime? @map("ended_at")
  createdAt     DateTime  @default(now()) @map("created_at")

  @@map("live_sessions")
}
